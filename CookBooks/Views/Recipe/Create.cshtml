@using CookBook.Model;
@using CookBook.Model.Enums;
@model Recipe


<form>
    <div class="form-group">
        <label asp-for="Name">Recipe Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter recipe name">
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"  rows="3"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="RecipeCategory" class="control-label"></label>
        <select asp-for="RecipeCategory" asp-items="Html.GetEnumSelectList<RecipeCategory>()" class="form-control"></select>   
    </div>

    <div class="form-group">
        <label asp-for="CookTime">Cooking time</label>
        <input asp-for="CookTime" type="text" class="form-control" placeholder="Enter cooking time">
    </div>

    <div class="form-group">
        <label asp-for="Temperature">Cooking temperature</label>
        <input asp-for="Temperature" type="text" class="form-control" placeholder="Enter cooking temperature in minutes">
    </div>

    <div class="form-group">
        <label asp-for="Degree" class="control-label"></label>
        <select asp-for="Degree" asp-items="Html.GetEnumSelectList<Degree>()" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="RecipeDifficultyLevel" class="control-label"></label>
        <select asp-for="RecipeDifficultyLevel" asp-items="Html.GetEnumSelectList<RecipeDifficultyLevel>()" class="form-control"></select>
    </div>


    <p1> Instructions</p1>

    <div style="width:60%;">

        <form>
            <div class="">
                <div class="col-lg-12">
                    <div id="row">
                        <div class="input-group m-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-danger"
                                        id="DeleteRow" type="button">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </button>
                            </div>
                            <input asp-for="Instructions" type="text"
                                   class="form-control m-input">
                        </div>
                    </div>

                    <div id="newinput"></div>
                    <button id="rowAdder" type="button"
                            class="btn btn-dark">
                        <span class="bi bi-plus-square-dotted">
                        </span> ADD
                    </button>
                </div>
            </div>
        </form>
    </div>


    <div class="form-group">
        <label asp-for="RecipeDifficultyLevel" class="control-label"></label>
        <select asp-for="RecipeDifficultyLevel" asp-items="Html.GetEnumSelectList<RecipeDifficultyLevel>()" class="form-control"></select>
    </div>
    
</form>
