@using CookBook.Model;
@using CookBook.Model.Enums;
@using CookBooks.ViewModels;


@model Recipe

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

<h1>Do you really want delete this Recipe??</h1>


    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <h1 class="my-4">
            @Model.Name
            <small>@Model.RecipeCategory</small>
        </h1>

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <img class="img-fluid" src="@Model.Image" alt="@Model.Name">
            </div>

            <div class="col-md-4">
                <h3 class="my-3">@Model.Name</h3>
                <p>@Model.Description</p>
                <h2>Instructions:</h2>
                <ul>
                    @foreach (var item in @Model.Instructions)
                    {
                        <li class="my-3">@item.Instruction</li>
                    }
                </ul>
                <h2>Ingredients:</h2>
                <ul>
                    @foreach (var item in @Model.Ingredients)
                    {
                        <li class="my-3">@item.Ingredient</li>
                    }
                </ul>




            </div>

        </div>
        <!-- /.row -->
        <!-- Related Projects Row -->
        <h3 class="my-4">@Model.Description</h3>

        <div class="row">

            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="@Model.Image" alt="">
                </a>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
                </a>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
                </a>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
                </a>
            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

    <div class="form-group">
        <form action="Delete" method="post">
            <input type="submit" value="Confirm delete Recipe" class="btn btn-danger float-right mt-3" />
            <input type="hidden" asp-for="Id" />
        </form>
    </div>

</div>

