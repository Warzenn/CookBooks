@using CookBooks.ViewModels;

@model RegisterViewModel

<!-- Name input -->
<div class="row">
    <div class="col-md-8 offset-2">
        <h1> Register page</h1>

        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <!-- Username = email input -->
            <div class="form-outline mb-4">
                <input asp-for="EmailAddress" class="form-control">
                <label asp-for="EmailAddress" for="EmailAddress">Email Address</label>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>


            <!-- Password input -->
            <div class="form-outline mb-4">
                <input asp-for="Password" class="form-control">
                <label asp-for="Password" for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Repeat Password input -->
            <div class="form-outline mb-4">
                <input asp-for="ConfirmPassword" class="form-control">
                <label class="form-label" for="ConfiormPassword">Confirm password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

             <button type="submit" class="btn btn-primary btn-block mb-3">Register</button>
        </form>
    </div>
</div>